{
  "name": "@akkadu/kadukadu",
  "version": "1.0.0",
  "description": "Akkadu's popover dictionary for language learning",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "repository": "https://github.com/Akkadu/kadukadu",
  "author": "codebender828 <jonas@akkadu-team.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "yarn link && yarn link \"@akkadu/kadukadu\"",
    "build": "concurrently yarn:build:*",
    "dev": "concurrently yarn:dev:*",
    "dev:build": "cross-env swc src --out-dir dist/esm/ --watch",
    "dev:playground": "cross-env vite serve playground --base=./",
    "build:esm": "cross-env swc src --out-dir dist/esm/",
    "build:cjs": "cross-env swc -C module.type=commonjs src --out-dir dist/cjs/",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint": "yarn lint:js",
    "playground": "vite serve playground",
    "playground:deploy": "yarn build && yarn postinstall && vite build playground"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@swc/cli": "^0.1.27",
    "@swc/core": "^1.2.39",
    "@vue/reactivity": "^3.0.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "defu": "^3.2.2",
    "sass": "^1.29.0",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^7.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prismjs": "^1.22.0",
    "vite": "^1.0.0-rc.9",
    "vue": "^3.0.0",
    "vue-prism-editor": "^1.2.2"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@akkadu/kadukadu-dictionary": "^1.0.0",
    "can-use-dom": "^0.1.0",
    "hyperscript": "^2.0.2",
    "lodash-es": "^4.17.15",
    "tippy.js": "^6.2.7"
  }
}
